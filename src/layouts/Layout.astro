---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";


interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="px-10">
		<div
			class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
		>
		</div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: ligh dark;
	}
	html {
		font-family: "Onest Variable", sans-serif;
		background-size: 224px;
		scroll-behavior: smooth;
	}
	body {
		background: #050505;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	/* Utiliza una consulta de medios para aplicar estilos CSS espec√≠ficos cuando se prefiere reducir el movimiento */
	@media (prefers-reduce-motion: reduce) {
		/* Si se prefiere reducir el movimiento, se desactiva el comportamiento de desplazamiento suave */
		html {
			scroll-behavior: auto;
		}
	}
</style>
